		{
			"name": "StatusPetID",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Проверка, что ответ успешный (2xx)\r",
							"pm.test(\"Статус-код успешный (2xx)\", function () {\r",
							"    pm.response.to.be.success;\r",
							"});\r",
							"// Проверка на 400 (Bad Request)\r",
							"pm.test(\"Статус-код 400 (ошибка клиента)\", function () {\r",
							"    pm.response.to.have.not.status(400);\r",
							"});\r",
							"// Проверка на 400 (Bad Request)\r",
							"pm.test(\"Статус-код 500 (ошибка клиента)\", function () {\r",
							"    pm.response.to.have.not.status(500);\r",
							"});\r",
							"\r",
							"pm.test(\"Успешный запрос (400 или 401)\", function () {\r",
							"    pm.expect(pm.response.code).to.be.oneOf([400, 401]);\r",
							"});\r",
							"\r",
							"pm.test(\"Ответ с ошибкой (4xx или 5xx)\", function () {\r",
							"    let code = pm.response.code; // получаем статус-код\r",
							"    pm.expect(code).to.be.at.least(400); // не меньше 400\r",
							"    pm.expect(code).to.be.below(600);   // меньше 600\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
